#include <iostream>

using namespace std;

int main() {

    char op;
    float num1, num2;

    cout << "Please type the operator: ";

    cin >> op;

    cout << "Type the first number ";
    cin >> num1;
    cout << "Type the second number ";
    cin >> num2;

    switch (op) {
        case '+':
            cout << "The result is: " << num1 + num2 << endl;
            break;

        case '-':
            cout << "The result is: " << num1 - num2 << endl;
            break;

        case '/':
            cout << "The result is: " << num1 / num2 << endl;
            break;

        case '*':
            cout << "The result is: " << num1 * num2 << endl;
            break;

        default:
            cout << "Error, big error... Nothing to calculate.";
            break;
    }
    return 0;
}
